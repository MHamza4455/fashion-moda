{% liquid
  if customer.has_account
    continue
  endif 
%}


<div class='create-account-popup'>
  {% render 'create-account-block', show_close_icon:true, return_to: 'back', 
  heading:section.settings.popup_heading, 
  opt_in_text:section.settings.opt_in_text, 
  opt_in_info:section.settings.opt_in_info, 


  opt_in_position: section.settings.opt_in_position, 
  submit_button_text:section.settings.modal_button_text 
  %}
</div>


<div class='create-account-popup-call btn {{ section.settings.button_style }} {{ section.settings.button_size }} {{ section.settings.button_color }}'>{{section.settings.button_text}}</div>


<style>
  #shopify-section-{{section.id}}{
    padding-top:{{section.settings.padding_top}}px;
    padding-bottom:{{section.settings.padding_bottom}}px;
  }
</style>


{% schema %}
  {
    "name": "Create Account Button",
    "class":"create-account-button",
    "settings": [
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Text",
        "default":"Create Account"
      },
      {
        "type": "select",
        "id": "button_color",
        "label": "Color",
        "default": "btn--black",
        "options": [
          { "label": "Primary", "value": "btn--primary" },
          { "label": "Secondary", "value": "btn--secondary" },
          { "label": "White", "value": "btn--white" },
          { "label": "Black", "value": "btn--black" }
        ]
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Button style",
        "default": "btn--solid",
        "options": [
          { "label": "Solid", "value": "btn--solid" },
          { "label": "Outline", "value": "btn--outline" },
          { "label": "Solid with border", "value": "btn--solid-border" },
          { "label": "Text", "value": "btn--text" }
        ]
      },
      {
        "type": "select",
        "id": "button_size",
        "label": "Size",
        "default": "btn--small",
        "options": [
          { "label": "Large", "value": "btn--large" },
          { "label": "Medium", "value": "btn--medium" },
          { "label": "Small", "value": "btn--small" }
        ]
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom",
        "default": 0
      },


      {
        "type": "header",
        "content": "Modal"
      },        


      {
        "type": "text",
        "id": "popup_heading",
        "label": "Heading",
        "default":"Join Us"
      },        

      {
        "type":"text",
        "id":"opt_in_text",
        "label":"Opt-In text",
        "default":"Yes, sign me up to hear from Tatcha*."
      },
      {
        "type":"richtext",
        "id":"opt_in_info",
        "label":"Opt-In description"
      },
      {
        "type":"select",
        "label":"Opt-In position",
        "id":"opt_in_position",
        "options": [
          { "label": "Top", "value": "top" },
          { "label": "Middle", "value": "middle" },
          { "label": "Bottom", "value": "bottom" },
        ],
        "default":"bottom"
      },
      {
        "type":"text",
        "id":"modal_button_text",
        "label":"Button Text",
        "default":"Join Now"
      }

    ],
    "presets": [
      {
        "name": "Create Account Button"
      }
    ]
  }
{% endschema %}

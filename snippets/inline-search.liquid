{%- doc -%}
  Renders an inline search bar with dropdown suggestions.

  @param {string} [class] - Additional classes for the search bar.
  @param {string} [style] - CSS style attribute.

  @example
  {% render 'inline-search', class: 'custom-class' %}
{%- enddoc -%}

<script
  src="{{ 'inline-search.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

<!-- Mobile search button (hidden on desktop) -->
<search-button class="inline-search-mobile-toggle desktop:hidden">
  <button
    on:click="#search-modal/showDialog"
    class="button button-unstyled"
    aria-label="{{ 'accessibility.open_search_modal' | t }}"
  >
    <span class="svg-wrapper">
      {{ 'icon-search.svg' | inline_asset_content }}
    </span>
  </button>
</search-button>

<!-- Desktop inline search (hidden on mobile) -->
<inline-search-component
  class="inline-search mobile:hidden{% if class != blank %} {{ class | strip }}{% endif %}"
  {% if style != blank %}style="{{ style }}"{% endif %}
  data-section-id="inline-search"
  role="search"
  aria-label="{{ 'content.search_input_label' | t }}"
>
  <form
    action="{{ routes.search_url }}"
    method="get"
    role="search"
    class="inline-search-form"
    ref="form"
  >
    <div class="inline-search-input-wrapper">
      <label
        for="inline-search-input"
        class="visually-hidden"
      >
        {{- 'content.search_input_label' | t -}}
      </label>
      <input
        class="inline-search-input"
        id="inline-search-input"
        type="search"
        name="q"
        role="combobox"
        aria-expanded="false"
        aria-owns="inline-search-results"
        aria-controls="inline-search-results"
        aria-haspopup="listbox"
        aria-autocomplete="list"
        autocomplete="off"
        placeholder="{{ 'content.search_input_placeholder' | t }}"
        ref="searchInput"
      >
      <input
        name="options[prefix]"
        type="hidden"
        value="last"
      >
      <span class="inline-search-icon">
        {{ 'icon-search.svg' | inline_asset_content }}
      </span>
      <button
        type="button"
        class="button-unstyled inline-search-clear"
        aria-label="{{ 'accessibility.reset_search' | t }}"
        ref="resetButton"
        style="display: none;"
      >
        <span class="svg-wrapper">
          {{ 'icon-close.svg' | inline_asset_content }}
        </span>
      </button>
    </div>

    <div
      class="inline-search-dropdown"
      ref="dropdown"
      hidden
    >
      <div
        class="inline-search-results"
        tabindex="-1"
        ref="searchResults"
        id="inline-search-results"
      >
        {% render 'predictive-search-empty-state', products_test_id: 'products-list-inline' %}
      </div>
      
      <div class="inline-search-footer">
        <button
          type="submit"
          class="button button-primary inline-search-view-all"
          ref="viewAllButton"
        >
          {{ 'content.search_results_view_all' | t }}
        </button>
      </div>
    </div>
  </form>
</inline-search-component>

{% stylesheet %}
  .inline-search {
    position: relative;
    width: 100%;
    max-width: 400px;
    
    @media screen and (max-width: 749px) {
      display: none; /* Hide on mobile, show icon instead */
    }
  }

  .inline-search-form {
    position: relative;
    width: 100%;
  }

  .inline-search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--style-border-radius-inputs, 4px);
    overflow: hidden;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .inline-search-input-wrapper:focus-within {
    border-color: var(--color-foreground);
    box-shadow: 0 0 0 1px var(--color-foreground);
  }

  .inline-search-input {
    flex: 1;
    padding: 8px 12px;
    padding-left: 36px;
    padding-right: 40px;
    border: none;
    background: transparent;
    font-size: 14px;
    line-height: 1.4;
    color: var(--color-foreground);
  }

  .inline-search-input::placeholder {
    color: var(--color-foreground-subtle);
  }

  .inline-search-input:focus {
    outline: none;
  }

  .inline-search-icon {
    position: absolute;
    left: 10px;
    top: 50%;
    transform: translateY(-50%);
    width: 16px;
    height: 16px;
    color: var(--color-foreground-subtle);
    pointer-events: none;
  }

  .inline-search-icon svg {
    width: 100%;
    height: 100%;
  }

  .inline-search-clear {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-foreground-subtle);
    transition: color 0.2s ease;
  }

  .inline-search-clear:hover {
    color: var(--color-foreground);
  }

  .inline-search-clear svg {
    width: 12px;
    height: 12px;
  }

  .inline-search-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-top: none;
    border-radius: 0 0 var(--style-border-radius-inputs, 4px) var(--style-border-radius-inputs, 4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    max-height: 400px;
    overflow: hidden;
    animation: slideDown 0.2s ease-out;
  }

  .inline-search-dropdown[hidden] {
    display: none;
  }

  .inline-search-results {
    max-height: 320px;
    overflow-y: auto;
  }

  .inline-search-products {
    padding: 8px 0;
  }

  .inline-search-product {
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .inline-search-product:last-child {
    border-bottom: none;
  }

  .inline-search-product-link {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    text-decoration: none;
    color: var(--color-foreground);
    transition: background-color 0.2s ease;
  }

  .inline-search-product-link:hover {
    background-color: var(--color-background-subtle);
  }

  .inline-search-product-image {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    margin-right: 12px;
    border-radius: 4px;
    overflow: hidden;
    background-color: var(--color-background-subtle);
  }

  .inline-search-product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .inline-search-product-info {
    flex: 1;
    min-width: 0;
  }

  .inline-search-product-title {
    font-size: 14px;
    font-weight: 500;
    line-height: 1.3;
    margin-bottom: 2px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .inline-search-product-price {
    font-size: 13px;
    color: var(--color-foreground-subtle);
    font-weight: 600;
  }

  .inline-search-no-results,
  .inline-search-error {
    padding: 20px 16px;
    text-align: center;
    color: var(--color-foreground-subtle);
    font-size: 14px;
  }

  .inline-search-footer {
    padding: 12px;
    border-top: 1px solid var(--color-border);
    background-color: var(--color-background-subtle);
  }

  .inline-search-view-all {
    width: 100%;
    padding: 8px 16px;
    font-size: 14px;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Header column adjustments for inline search */
  .header__column--left:has(.inline-search) {
    flex: 1;
    max-width: 400px;
  }

  /* Mobile search icon fallback */
  @media screen and (max-width: 749px) {
    .inline-search-mobile-toggle {
      display: flex;
    }
    
    .inline-search-mobile-toggle button {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      border: none;
      background: transparent;
      color: var(--color-foreground);
      cursor: pointer;
      transition: color 0.2s ease;
    }

    .inline-search-mobile-toggle button:hover {
      color: var(--color-foreground-subtle);
    }

    .inline-search-mobile-toggle svg {
      width: 20px;
      height: 20px;
    }
  }
{% endstylesheet %}

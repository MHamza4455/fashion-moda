                          data-variant-id="{{ variant.id }}"
                          data-product-image-hover
                        {%- endcapture -%}

                        {%- render 'image-fill',
                          cover: image_cover,
                          is_background: true,
                          img_object: swatch_image_hover,
                          image_attributes: image_attributes,
                          sizes: sizes,
                          loading: 'eager',
                          aspect_ratio: aspect_ratio,
                          classes: 'product__media product__media__hover-img' -%}
                      {%- endif -%}
                    {%- endif -%}
                  {%- endfor -%}
                </div>
              </template>
            {%- endif -%}
          </deferred-loading>
          {%- elsif product_grid_hover == 'image_third' -%}
          {%- assign image = product.media[2].preview_image -%}
          {% if image == blank and product.media[1].preview_image != blank %}
            {%- assign image = product.media[1].preview_image -%}
          {% elsif image == blank and product.media[1].preview_image == blank  %}
            {%- assign image = product.media[0].preview_image -%}
          {% endif %}
          <deferred-loading urlImhg="{{image }}"
            class="product__media__hover product__media__hover--{{ product_grid_hover_animation }}"
            {% if has_colors %} data-deferred-container="[data-product-block]" data-deferred-triggers="[data-deferred-trigger-element]"{% endif %}
          >
            {%- render 'image-fill',
              cover: image_cover, 
              is_background: true,
              img_object: image,
              sizes: sizes,
              image_attributes: 'data-product-image-hover',
              aspect_ratio: aspect_ratio,
              classes: 'product__media__hover-img product__media__hover-img--visible product__media third_image' -%}

            {%- if has_colors -%}
              <template>
                <div data-deferred-content>
                  {%- for variant in product.variants -%}
                    {%- assign featured_image_index = variant.featured_image.position -%}
                    {%- if featured_image_index > 1 -%}
                      {%- assign swatch_image_hover = product.media[featured_image_index].preview_image -%}
                      {%- if swatch_image_hover -%}
                        {%- capture image_attributes -%}
                          data-variant-id="{{ variant.id }}"

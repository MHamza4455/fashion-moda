{% if request.path == '/apps/subscriptions/manage' and customer == nil %}



    <div class="subscription-login-container">
        <div class="subscription-login-box">
        <h2>{{ 'customer.login.subscription_sign_in_heading' | t }}</h2>
        <p>{{ 'customer.login.subscription_sign_in_text' | t }}</p>
        <a href="{{ routes.account_login_url }}?return_url={{ request.path | url_encode }}" class="btn btn--primary btn--solid">
            {{ 'customer.login.sign_in' | t }}
          </a>
        </div>
    </div>


    <style>
        body{
            overflow:hidden !important;
        }
        .subscription-login-container {
            position: fixed;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            background-color:#ffffff;
            top:0px;
            left:0px;
            z-index: 10000;
            padding:20px;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            text-align: center;
        }
        .subscription-login-box {
            width: 360px;
            max-width:100%;
            border-radius: 8px;
            padding: 40px 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border: 1px solid #e0e0e0;
        }
        .subscription-login-box h2 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom:15px;
        }
        .subscription-login-box p{
            margin:0px 0px 25px;
            font-size:16px;
            color:#666;
        }
        .subscription-login-box a{
            width:100%;
            border-radius: 4px;
            background-color:#000000;
        }
    </style>

{% endif %}
